{{> navbar}}

<h4 class="mt-3">Customer Details</h4>
<table class="table table-bordered">
    <tbody>
        <tr>
            <td><strong>Name</strong></td>
            <td>{{customer.name}}</td>
        </tr>
        <tr>
            <td><strong>Phone</strong></td>
            <td>{{customer.phone}}</td>
         </tr>
         <tr>
            <td><strong>Coupons</strong></td>
            <td>{{customer.coupons}}</td>
         </tr>
    </tbody>
</table>

<h4 class="mt-3">Previous Delivery</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Bottles</th>
        </tr>
    </thead>
    <tbody>
        {{#each deliveries}}
        <tr>
            <td>{{formatDate this.date "Y-M-D"}}</td>
            {{!-- <td>{{formatDate this.date "MMMM Do YYYY, h:mm a"}}</td> --}}
             <td>{{this.bottles_delivered}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

